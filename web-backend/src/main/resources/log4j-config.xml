	<appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${ilead.root}/../log/app_out.log"/>
		<param name="MaxFileSize" value="10Mb"/>
		<param name="MaxBackupIndex" value="20"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}][%p] - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender>
	
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}][%p](%-24c:%L) - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender>

	<appender name="operateAppender"
		class="com.dhc.framework.base.log.log4j.logutil.OperateLogAppender">
		<param name="BufferSize" value="1"/>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender>

	<appender name="operateFileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${ilead.root}/../log/app_operate.log"/>
		<param name="MaxFileSize" value="10Mb"/>
		<param name="MaxBackupIndex" value="20"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}][%p] - %m%n"/>
		</layout>
		<filter class="com.dhc.framework.base.log.log4j.logutil.GeneralLoggerFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
			<param name="acceptedLoggerNames" value="OperateLogger"/>
		</filter>
	</appender>

	<appender name="sqlAppender" class="com.dhc.framework.base.log.log4j.logutil.SqlLogAppender">
		<param name="BufferSize" value="1"/>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender>

	<appender name="sqlFileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${ilead.root}/../log/app_sql.log"/>
		<param name="MaxFileSize" value="10Mb"/>
		<param name="MaxBackupIndex" value="20"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}][%p] - %m%n"/>
		</layout>
		<filter class="com.dhc.framework.base.log.log4j.logutil.GeneralLoggerFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
			<param name="acceptedLoggerNames" value="SqlLogger"/>
		</filter>
	</appender>

	<appender name="logonAppender"
		class="com.dhc.framework.base.log.log4j.logutil.LogonLogAppender">
		<param name="BufferSize" value="1"/>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug"/>
			<param name="LevelMax" value="error"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender>

	<!--
	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
	    <param name="BufferSize" value="10"/>
	    <appender-ref ref="SqlLogger"/>
    </appender>
	-->
	
	<logger name="java.sql.Connection" additivity="true"> 
	   <level value="debug" />
	</logger> 
	<logger name="java.sql.Statement" additivity="true"> 
	   <level value="debug" />
	</logger> 
	<logger name="java.sql.PreparedStatement" additivity="true"> 
	   <level value="debug" />
	</logger> 
	
	<logger name="org.apache.shiro.web.filter.authc.FormAuthenticationFilter" additivity="true"> 
	   <level value="DEBUG" />
	</logger> 
	
	<logger name="SqlLogger" additivity="true"> 
	   <level value="info" />
	   <appender-ref ref="sqlAppender" /> 
	   <appender-ref ref="sqlFileAppender" /> 
	</logger>
	
	<logger name="OperateLogger" additivity="true"> 
	   <level value="info" />
		<appender-ref ref="operateAppender" />
		<appender-ref ref="operateFileAppender" />
	</logger>

	<logger name="LogonLogger" additivity="true"> 
	    <level value="info" />
		<appender-ref ref="logonAppender" />
	</logger>
	
	<root>
		<level value="info"/>
		
		<appender-ref ref="fileAppender" />
		<appender-ref ref="consoleAppender" />
<!--		<appender-ref ref="operateAppender" />
		<appender-ref ref="operateFileAppender" />
  		<appender-ref ref="sqlAppender" />
		<appender-ref ref="sqlFileAppender" /> 
		<appender-ref ref="logonAppender" /> -->

	</root>

</log4j:configuration>